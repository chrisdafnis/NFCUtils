<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
     Customize your theme here. 
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    <item name="windowActionModeOverlay">true</item>
  </style>

  <style name="AppTheme.NoActionBar" >
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>


  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


  <!--Common Button Styles-->

  <!--Common Tool Bar Action Btn Style-->
  <style name="CommonToolBarActionBtnStyle">
    <item name="android:textColor">@color/common_toolbar_action_btn_tv_text_color</item>
    <item name="android:textSize">@dimen/common_tool_bar_action_btn_tv_text_size</item>
    <item name="android:padding">@dimen/common_tool_bar_action_btn_padd</item>
    <item name="android:background">@drawable/tool_bar_action_btn_selector</item>
  </style>

  <style name="CommonToolBarTitleTVStyle">
    <item name="android:textColor">@color/common_toolbar_title_text_color</item>
    <item name="android:textSize">@dimen/common_tool_bar_title_tv_text_size</item>
  </style>

  <!--Common Label Style-->
  <style name="CommonLabelTVStyle">
    <item name="android:textColor">@drawable/common_et_text_selector</item>
    <item name="android:maxLines">1</item>
    <item name="android:textSize">@dimen/common_label_tv_text_size</item>
  </style>


  <!--Common Label Multi lineStyle-->
  <style name="CommonLabelMultiLineTVStyle">
    <item name="android:textColor">@drawable/common_et_text_selector</item>
    <item name="android:textSize">@dimen/common_label_tv_text_size</item>
  </style>

  <!--Common Dark Button Style-->
  <style name="CommonDarkButtonStyle">
    <item name="android:textColor">@drawable/common_dark_btn_text_selector</item>
    <item name="android:textSize">@dimen/common_dark_btn_text_size</item>
    <item name="android:paddingRight">@dimen/common_dark_btn_padd_l_r</item>
    <item name="android:gravity">center</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:paddingLeft">@dimen/common_dark_btn_padd_l_r</item>
    <item name="android:paddingTop">@dimen/common_dark_btn_padd_t_b</item>
    <item name="android:paddingBottom">@dimen/common_dark_btn_padd_t_b</item>
    <item name="android:background">@drawable/common_dark_btn_selector</item>
    <item name="imageButtonTextViewImageTextSize">@dimen/common_dark_btn_image_text_text_size</item>
    <item name="imageButtonTextViewSimpleTextSize">@dimen/common_dark_btn_simple_text_text_size</item>
    <item name="android:lineSpacingMultiplier">.8</item>
  </style>

  <!--Common Light Button Style-->
  <style name="CommonLightButtonStyle">
    <item name="android:gravity">center</item>
    <item name="android:textColor">@drawable/common_light_btn_text_selector</item>
    <item name="android:textSize">@dimen/common_dark_btn_text_size</item>
    <item name="android:paddingRight">@dimen/common_dark_btn_padd_l_r</item>
    <item name="android:paddingLeft">@dimen/common_dark_btn_padd_l_r</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:paddingTop">@dimen/common_dark_btn_padd_t_b</item>
    <item name="android:paddingBottom">@dimen/common_dark_btn_padd_t_b</item>
    <item name="android:background">@drawable/common_light_btn_selector</item>
    <item name="imageButtonTextViewImageTextSize">@dimen/common_dark_btn_image_text_text_size</item>
    <item name="imageButtonTextViewSimpleTextSize">@dimen/common_dark_btn_simple_text_text_size</item>
    <item name="android:lineSpacingMultiplier">.8</item>
  </style>

  <!--Greenk Button Style-->
  <style name="GreenButtonStyle">
    <item name="android:textColor">@drawable/common_dark_btn_text_selector</item>
    <item name="android:textSize">@dimen/common_dark_btn_text_size</item>
    <item name="android:paddingRight">@dimen/common_dark_btn_padd_l_r</item>
    <item name="android:gravity">center</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:paddingLeft">@dimen/common_dark_btn_padd_l_r</item>
    <item name="android:paddingTop">@dimen/common_dark_btn_padd_t_b</item>
    <item name="android:paddingBottom">@dimen/common_dark_btn_padd_t_b</item>
    <item name="android:background">@drawable/green_btn_selector</item>
    <item name="imageButtonTextViewImageTextSize">@dimen/common_dark_btn_image_text_text_size</item>
    <item name="imageButtonTextViewSimpleTextSize">@dimen/common_dark_btn_simple_text_text_size</item>
    <item name="android:lineSpacingMultiplier">.8</item>
  </style>

  <!--Keyboard Number Button Style-->
  <style name="KeyboardNumberButtonStyle">
    <item name="android:gravity">center</item>
    <item name="android:textColor">@drawable/keyboard_number_btn_text_selector</item>
    <item name="android:textSize">@dimen/keyboard_number_text_size</item>
    <item name="android:paddingRight">@dimen/keyboard_number_btn_padd_l_r</item>
    <item name="android:paddingLeft">@dimen/keyboard_number_btn_padd_l_r</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:paddingTop">@dimen/keyboard_number_btn_padd_t_b</item>
    <item name="android:paddingBottom">@dimen/keyboard_number_btn_padd_t_b</item>
    <item name="android:background">@drawable/keyboard_number_btn_selector</item>
  </style>


  <!--Common Edit Text Style-->
  <style name="CommonETStyle">
    <item name="android:textColor">@drawable/common_et_text_selector</item>
    <item name="android:textSize">@dimen/common_et_text_size</item>
    <item name="android:maxLines">1</item>
    <item name="android:textColorHint">@drawable/common_et_text_selector</item>
    <item name="android:paddingRight">@dimen/common_et_padd_l_r</item>
    <item name="android:paddingLeft">@dimen/common_et_padd_l_r</item>
    <item name="android:paddingTop">@dimen/common_et_padd_t_b</item>
    <item name="android:paddingBottom">@dimen/common_et_padd_t_b</item>
    <item name="android:background">@drawable/common_et_selector</item>
  </style>

  <!--Common Scrollbar Style-->
  <style name="scrollbar_shape_style">
    <item name="android:scrollbars">vertical</item>
    <item name="android:fadeScrollbars">false</item>
    <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>

  </style>

</resources>